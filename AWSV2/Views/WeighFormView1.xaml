<UserControl x:Class="AWSV2.Views.WeighFormView1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AWSV2.Views"
             mc:Ignorable="d" 
             >

        <Grid Background="White" Width="Auto" Height="Auto">
            <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="0" Margin="5"  Width="Auto" Height="Auto">
                <ContentControl Content="{Binding WeighFormGrid}"  Width="Auto" Height="Auto"></ContentControl>
            </Border>
            <Border Grid.Column="0" BorderBrush="LightGray" BorderThickness="0" Margin="5"  Width="Auto" Height="Auto">
                <ContentControl Content="{Binding WeighFormStackPanel}"></ContentControl>
            </Border>
        </Grid>

</UserControl>
