        <Style x:Key="ThisPageButtonStyle" TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Margin" Value="0,8,8,0" />
            <Setter Property="Height" Value="60" />
            <Setter Property="Width" Value="Auto" />
            <Setter Property="Foreground" Value="#333333" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="#F5F7F9"
                            BorderBrush="#E0E6EC"
                            BorderThickness="1"
                            CornerRadius="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ThisPageYellowButtonStyle" TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Margin" Value="0,8,8,0" />
            <Setter Property="Height" Value="60" />
            <Setter Property="Width" Value="Auto" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{StaticResource PrimaryHueLightBrush}"
                            BorderThickness="1"
                            CornerRadius="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </Window.Resources>

    <md:DialogHost DialogBackground="Transparent" IsOpen="{Binding ShowEditPanel}">
        <md:DialogHost.DialogContent>
            <Border
                Name="user"
                Width="480"
                MinHeight="320"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="White"
                BorderThickness="1"
                CornerRadius="0">
                <Grid Margin="8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <StackPanel>

                        <Grid Margin="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>
                            <Label
                                VerticalContentAlignment="Center"
                                Content="IP地址："
                                FontSize="16"
                                Foreground="{StaticResource PrimaryHueLightBrush}" />
                            <TextBox
                                Grid.Column="1"
                                Foreground="{StaticResource MaterialDesignBody}"
                                Tag="12.10.25.17"
                                Text="{Binding TRelay2IP, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>
                        <Grid Margin="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>
                            <Label
                                VerticalContentAlignment="Center"
                                Content="IP子网掩码："
                                FontSize="16"
                                Foreground="{StaticResource PrimaryHueLightBrush}" />
                            <TextBox
                                Grid.Column="1"
                                Foreground="{StaticResource MaterialDesignBody}"
                                Tag="12.10.25.17"
                                Text="{Binding TRelay2Mask, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>
                        <Grid Margin="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>
                            <Label
                                VerticalContentAlignment="Center"
                                Content="网关："
                                FontSize="16"
                                Foreground="{StaticResource PrimaryHueLightBrush}" />
                            <TextBox
                                Grid.Column="1"
                                Foreground="{StaticResource MaterialDesignBody}"
                                Tag="12.10.25.17"
                                Text="{Binding TRelay2Gateway, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>


                    </StackPanel>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Button
                            Margin="20,0"
                            Command="{s:Action SaveNiRenInfo}"
                            Content="保存" />
                        <Button
                            Grid.Column="1"
                            Margin="20,0"
                            Command="{s:Action HideEdit}"
                            Content="取消"
                            Cursor="Hand" />
                    </Grid>
                </Grid>

            </Border>
        </md:DialogHost.DialogContent>


        <Grid>

            <Border
                Grid.Row="1"
                Margin="8"
                Background="{StaticResource PrimaryHueDarkBrush}"
                CornerRadius="0">
                <TabControl Style="{StaticResource MaterialDesignTabControl}">
                    <TabItem
                        Background="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsSelected, Converter={StaticResource tabItemBackgroundConverter}}"
                        IsSelected="True"
                        Style="{StaticResource ajTabItem}">
                        <TabItem.Header>
                            <TextBlock Foreground="{Binding RelativeSource={RelativeSource AncestorType=TabItem}, Path=IsSelected, Converter={StaticResource tabItemForegroundConverter}}" Text="地磅称重设置" />
                        </TabItem.Header>

                        <TabControl Margin="8">
                            <TabItem
                                MinWidth="128"
                                Background="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsSelected, Converter={StaticResource tabItemBackgroundConverter}}"
                                Style="{StaticResource ajTabItem}">
                                <TabItem.Header>
                                    <TextBlock Foreground="{Binding RelativeSource={RelativeSource AncestorType=TabItem}, Path=IsSelected, Converter={StaticResource tabItemForegroundConverter}}" Text="仪表设置" />
                                </TabItem.Header>
                                <StackPanel>
                                    <Border BorderThickness="0,0,0,1">
                                        <StackPanel
                                            Width="200"
                                            Margin="8"
                                            HorizontalAlignment="Left">
                                            <TextBox
                                                Margin="0,24,0,0"
                                                md:HintAssist.Background="{StaticResource PrimaryHueDarkBrush}"
                                                md:HintAssist.Hint="地磅名称"
                                                Foreground="{StaticResource MaterialDesignBody}"
                                                Tag="192.168.0.1"
                                                Text="{Binding WeighName, UpdateSourceTrigger=PropertyChanged}" />

                                            <ComboBox
                                                Margin="0,24,0,0"
                                                md:HintAssist.Background="{StaticResource PrimaryHueDarkBrush}"
                                                md:HintAssist.Hint="仪表型号"
                                                DisplayMemberPath="Name"
                                                Foreground="{StaticResource MaterialDesignBody}"
                                                IsReadOnly="True"
                                                ItemsSource="{Binding ProtocolTypes}"
                                                SelectedValue="{Binding WeighProtocolType, Mode=TwoWay}"
                                                SelectedValuePath="Key" />
                                            <ComboBox
                                                Margin="0,24,0,0"
                                                md:HintAssist.Background="{StaticResource PrimaryHueDarkBrush}"
                                                md:HintAssist.Hint="仪表串口"
                                                Foreground="{StaticResource MaterialDesignBody}"
                                                IsReadOnly="True"
                                                ItemsSource="{Binding SerialPorts}"
                                                SelectedItem="{Binding WeighSerialPortName}" />
                                            <ComboBox
                                                Margin="0,24,0,0"
                                                md:HintAssist.Background="{StaticResource PrimaryHueDarkBrush}"
                                                md:HintAssist.Hint="波特率"
                                                Foreground="{StaticResource MaterialDesignBody}"
                                                IsReadOnly="True"
                                                ItemsSource="{Binding BaudRates}"
                                                SelectedItem="{Binding WeighSerialPortBaudRate}" />


                                        </StackPanel>
                                    </Border>
                                    <StackPanel Width="480" HorizontalAlignment="Left">
                                        <Grid Margin="0,24,24,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="2*" />
                                                <ColumnDefinition Width="2*" />
                                            </Grid.ColumnDefinitions>
                                            <Label VerticalAlignment="Center" Content="计量单位：" />
                                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                <RadioButton
                                                    Margin="12,0"
                                                    Content="T"
                                                    IsChecked="{Binding WeighingUnit, Converter={StaticResource wutb}, ConverterParameter=t}"
                                                    Style="{StaticResource commonRadio}" />
                                                <RadioButton
                                                    Margin="12,0"
                                                    Content="KG"
                                                    IsChecked="{Binding WeighingUnit, Converter={StaticResource wutb}, ConverterParameter=kg}"
                                                    Style="{StaticResource commonRadio}" />
                                            </StackPanel>
                                            <DockPanel Grid.Column="2">

                                                <Label VerticalAlignment="Center" Content="自动转化单位：" />
                                                <ToggleButton
                                                    HorizontalAlignment="Right"
                                                    DockPanel.Dock="Right"
                                                    IsChecked="{Binding AutoConvertUnit}"
                                                    Style="{StaticResource MaterialDesignSwitchToggleButton}" />
                                            </DockPanel>

                                        </Grid>

                                        <Grid Margin="0,24,24,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="3*" />
                                            </Grid.ColumnDefinitions>
                                            <Label VerticalAlignment="Center" Content="显示格式：" />

                                            <ComboBox
                                                Grid.Column="1"
                                                Width="100"
                                                Margin="12,0,0,0"
                                                HorizontalAlignment="Left"
                                                DisplayMemberPath="label"
                                                ItemsSource="{Binding WeightValueDisplayFormatOptions}"
                                                SelectedValue="{Binding WeightValueDisplayFormat, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                SelectedValuePath="value" />

                                        </Grid>


                                    </StackPanel>

                                </StackPanel>

                            </TabItem>
                            <TabItem
                                MinWidth="128"
                                Background="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsSelected, Converter={StaticResource tabItemBackgroundConverter}}"
                                Style="{StaticResource ajTabItem}">
                                <TabItem.Header>
                                    <TextBlock Foreground="{Binding RelativeSource={RelativeSource AncestorType=TabItem}, Path=IsSelected, Converter={StaticResource tabItemForegroundConverter}}" Text="称重设置" />
                                </TabItem.Header>
                                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <RadioButton
                                                Margin="0,0,32,0"
                                                Content="一次称重"
                                                IsChecked="{Binding WeighingMode, Converter={StaticResource wmtb}, ConverterParameter=Once}"
                                                Style="{StaticResource commonRadio}" />
                                            <RadioButton
                                                Margin="0,0,0,0"
                                                Content="二次称重"
                                                IsChecked="{Binding WeighingMode, Converter={StaticResource wmtb}, ConverterParameter=Twice}"
                                                Style="{StaticResource commonRadio}" />
                                            <Button
                                                Click="Button1_Click"
                                                Cursor="Hand"
                                                Style="{StaticResource Button NoneStyle}">
                                                <md:PackIcon
                                                    Width="22"
                                                    Height="22"
                                                    Kind="InfoCircleOutline" />
                                            </Button>


                                        </StackPanel>
                                        <StackPanel Margin="0,12" Orientation="Horizontal">
                                            <RadioButton
                                                x:Name="rdoCtrlHand"
                                                Margin="0,0,32,0"
                                                Content="手动称重"
                                                IsChecked="{Binding WeighingControl, Converter={StaticResource wctb}, ConverterParameter=Hand}"
                                                Style="{StaticResource commonRadio}" />
                                            <RadioButton
                                                x:Name="rdoCtrlAuto"
                                                Margin="0,0,32,0"
                                                Content="自动称重"
                                                IsChecked="{Binding WeighingControl, Converter={StaticResource wctb}, ConverterParameter=Auto}"
                                                IsEnabled="{Binding ActiveCode.LockHardware, Converter={StaticResource boolReverseConverter}}"
                                                Style="{StaticResource commonRadio}" />
                                            <RadioButton
                                                x:Name="rdoCtrlBtn"
                                                Content="按钮称重(相机的IN2)"
                                                IsChecked="{Binding WeighingControl, Converter={StaticResource wctb}, ConverterParameter=Btn}"
                                                IsEnabled="{Binding ActiveCode.LockHardware, Converter={StaticResource boolReverseConverter}}"
                                                Style="{StaticResource commonRadio}" />
                                        </StackPanel>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1.4*" />
                                                <ColumnDefinition Width="1.4*" />
                                                <ColumnDefinition Width="3*" />
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Margin="0,24,24,0">


                                                <TextBox
                                                    Margin="0,0,0,24"
                                                    md:HintAssist.Background="{StaticResource PrimaryHueDarkBrush}"
                                                    md:HintAssist.Hint="稳定次数"
                                                    Foreground="{StaticResource MaterialDesignBody}"
                                                    Tag="50"
                                                    Text="{Binding StableDelay}" />
                                                <TextBox
                                                    Margin="0,0,0,24"
                                                    md:HintAssist.Background="{StaticResource PrimaryHueDarkBrush}"
                                                    md:HintAssist.Hint="回零重量"
                                                    Foreground="{StaticResource MaterialDesignBody}"
                                                    Tag="50"
                                                    Text="{Binding MinSlotWeight}" />

                                                <TextBox
                                                    Margin="0,0,0,24"
                                                    md:HintAssist.Background="{StaticResource PrimaryHueDarkBrush}"
                                                    md:HintAssist.Hint="超时复位"
                                                    md:TextFieldAssist.SuffixText="秒"
                                                    Foreground="{StaticResource MaterialDesignBody}"
                                                    Tag="50"
                                                    Text="{Binding CancelWeighingTime}" />
                                                <TextBox
                                                    Margin="0,0,0,24"
                                                    md:HintAssist.Background="{StaticResource PrimaryHueDarkBrush}"
                                                    md:HintAssist.Hint="重复过磅间隔"
                                                    md:TextFieldAssist.SuffixText="秒"
                                                    Foreground="{StaticResource MaterialDesignBody}"
                                                    Tag="50"
                                                    Text="{Binding LastPlateTimer}" />
                                                <TextBox
                                                    Margin="0,0,0,24"
                                                    md:HintAssist.Background="{StaticResource PrimaryHueDarkBrush}"
                                                    md:HintAssist.Hint="一次过磅有效时间"
                                                    Foreground="{StaticResource MaterialDesignBody}"
                                                    Tag="50"
                                                    Text="{Binding WeighingValidTime}" />
                                                <TextBox
                                                    Margin="0,0,0,24"
                                                    md:HintAssist.Background="{StaticResource PrimaryHueDarkBrush}"
                                                    md:HintAssist.Hint="有效重量"
                                                    Foreground="{StaticResource MaterialDesignBody}"
                                                    Tag="192.168.0.1"
                                                    Text="{Binding EffectiveWeight, UpdateSourceTrigger=PropertyChanged}" />


                                            </StackPanel>
                                            <StackPanel Grid.Column="1" Margin="0,24,24,0">
                                                <DockPanel Grid.Column="1" Margin="0,0,0,24">
                                                    <Label Content="白名单功能" />
                                                    <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                                                        <ToggleButton
                                                            x:Name="LPRWhiteList"
                                                            IsChecked="{Binding LPRWhiteList, Converter={StaticResource intToBoolTextConverter}, Mode=TwoWay}"
                                                            Style="{StaticResource MaterialDesignSwitchToggleButton}" />
                                                        <Label
                                                            VerticalAlignment="Center"
                                                            Content="{Binding ElementName=LPRWhiteList, Path=IsChecked, Converter={StaticResource boolToEnableTextConverter}, FallbackValue=--}"
                                                            Foreground="{StaticResource PrimaryHueLightBrush}" />
                                                    </StackPanel>

